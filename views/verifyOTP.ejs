<%- include('layout/header'); -%>

<div>
  <form method="post" action="/verify-otp" class="container col-md-6">
    <h1 class="fw-bold mb-3 mt-3 fs-2">🧑‍💻 Verify OTP 🧑‍💻</h1>

    <div class="form-floating mb-3">
      <input
        type="hidden"
        class="form-control rounded-3"
        id="floatingInput verifyotpmail"
        placeholder="name@example.com"
        name="email"
        value="<%= locals.email %>"
      />
    </div>

    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control rounded-3"
        id="floatingInput"
        placeholder="Verify OTP"
        name="otp"
        required
      />
      <label for="floatingInput">Verify OTP</label>
    </div>
    <p class="text-body-danger" style="color: #bb2124">
      <% if (locals.errorMessage) { %> <%= locals.errorMessage %> <% } %>
    </p>
    <p class="text-body-danger" style="color: #22bb33">
      <% if (locals.successMessage) { %> <%= locals.successMessage %> <% }%>
    </p>
    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">
      Verify
    </button>
    <p class="text-body-secondary">
      OTP not received?
      <a href="/resend-otp" style="text-decoration: none"> Resend OTP </a>
    </p>
  </form>
</div>
