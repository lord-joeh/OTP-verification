<%- include('layout/header'); -%>
<div class="container">
  <form action="/logout" method="POST" class="container col-md-6">
    <h1 class="fw-bold mb-3 mt-3 fs-2">ğŸ§‘â€ğŸ’» Dashboard ğŸ§‘â€ğŸ’»</h1>

    <div class="form-floating mb-3">
      <input
        type="text"
        class="form-control rounded-3"
        id="floatingInput"
        name="name"
        value=" <%= locals.name %> "
        readonly
      />
      <label for="floatingInput">Username</label>
    </div>

    <div class="form-floating mb-3">
      <input
        type="email"
        class="form-control rounded-3"
        id="floatingInput"
        placeholder="username"
        name="email"
        value=" <%= locals.email %> "
        readonly
      />
      <label for="floatingInput">Email</label>
    </div>
    <p class="text-body-danger" style="color: #bb2124">
      <% if (locals.errorMessage) { %> <%= locals.errorMessage %> <% } %>
    </p>
    <p class="text-body-danger" style="color: #22bb33">
      <% if (locals.successMessage) { %> <%= locals.successMessage %> <% }%>
    </p>
    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">
      Logout
    </button>
  </form>
</div>
